{
  "manifest_version": 3,
  "name": "MyDodo | A simple todo list",
  "description": "Create a todo list in your Google Chrome browser",
  "version": "2.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "assets/128.png",
      "16": "assets/16.png",
      "32": "assets/32.png",
      "64": "assets/64.png"
    }
  },
  "permissions": ["activeTab", "scripting"]
}
